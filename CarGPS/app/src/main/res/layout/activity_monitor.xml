<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cztek.concept.cargps.activities.tab_bar_fragment.tab_bar_fragment_1.children.MonitorActivity">

    <com.amap.api.maps2d.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/toolBarRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/horizontal_margin1"
        android:paddingRight="@dimen/horizontal_margin1"
        android:paddingTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/mapView">

        <LinearLayout
            android:layout_width="@dimen/itemImageMiddleSize"
            android:layout_height="@dimen/itemImageMiddleSize"
            android:background="@drawable/style_bg_circle_white"
            android:gravity="center">

            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="@dimen/itemImageDefaultSize"
                android:layout_height="@dimen/itemImageDefaultSize"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_back_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopCountTextView"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/style_textview_red_bg"
                android:gravity="center"
                android:lines="1"
                android:text="商店数：18"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/text5" />

            <TextView
                android:id="@+id/carCountTextView"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/item_default_marginTop"
                android:background="@drawable/style_textview_red_bg"
                android:gravity="center"
                android:lines="1"
                android:text="车辆数：1233"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/text5" />

        </LinearLayout>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
